body
  color $textColor
  font-size $baseSize
  line-height 1.4
  font-weight 400
  font-family -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Nue, Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -webkit-text-stroke 1px transparent
  -webkit-text-size-adjust 100%

h1,
.h1
  font-size 24px

h2,
.h2
  font-size 20px

h3,
.h3
  font-size 18px

p
  margin-top 20px
  margin-bottom 20px

ul, ol
  padding-left 40px
  margin-top 20px
  margin-bottom 20px

b, strong
  font-weight 700

i, em
  font-style italic

sup
  font-size 85%
  line-height 0
  vertical-align baseline
  position relative
  top -0.45em

sub
  font-size 85%
  line-height 0
  vertical-align baseline
  position relative
  top 0.2em

u,
.underlined
  text-decoration underline

s,
strike,
.strike
  text-decoration line-through

blockquote
  position relative
  &:before,
  &:after
    font-family "Times New Roman"
    color #bdbdbd
    font-size 3em
    line-height 0.1em
    vertical-align -.45em
    display inline-block

  &:before
    content "\201C"
    margin-right 5px
  &:after
    content "\201D"
    margin-left 5px

code
  font-family monospace

a
  text-decoration underline
  &:hover
    color $red


.tag
  position relative
  &:before
    content ""
    color $gray-dark
    font-size .6em
    font-weight 700
    position absolute
    right calc(100% + 5px)
    top 10px
  &_h1
    &:before
      content "H1"