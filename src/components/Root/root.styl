.canvas
  width 100%
  height 100vh
  display flex
  flex-direction column

.layout
  height 100%
  position relative
  flex 1 0 auto
  display flex

.main
  width 100%
  height 100%
  display flex
  flex 0 1 auto

.menu
  width $menu-width
  height 100%
  color $lightColor
  background-color $textColor
  display block
  flex 0 0 auto
  @media $tablet
    position absolute
    top 0
    right 100%