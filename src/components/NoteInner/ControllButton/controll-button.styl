.button
  background transparent
  border 1px solid $gray
  padding 2px
  display inline-block
  vertical-align middle
  cursor pointer
  & + &
    margin-left 5px
  &:hover
    color $red

:global
  .ql-active
    color $red

.color
  width 24px
  height 24px
  background-color #000
  border 1px solid #fff
  border-radius 3px
  display inline-block
  vertical-align middle
