.wrapper
  width 100%
  background-color $gray-light
  border-bottom 1px solid $gray
  padding 10px 10px 10px 15px
  flex 0 1 auto
  @media $tablet
    padding-left 5px
    padding-right 5px
  &Desktop
    display flex
    align-items center
    justify-content space-between
    @media $tablet
      display none
  &Tablet
    background-color $bg
    display flex
    align-items center
    justify-content space-between
    @media $more-tablet
      display none



&.input
  @media $tablet
    margin-left 5px
    margin-right 5px

.burger
  @media $more-tablet
    display none

.link
  margin-top -1px
  position relative
  display block
  &Hidden
    width 0
    height 0
    font-size 0
    line-height 0
    position absolute
    z-index -1
