.toolbar
  width 100%
  background-color $gray
  padding 5px
  padding-right 35px
  display flex
  position fixed
  bottom -40px
  left $list-width + $menu-width
  right 0
  display none
  @media $tablet
    left $list-width
  @media $mobile
    left 0

  &Open
    display block

  &Container
    overflow auto
    padding-bottom -1 * @bottom
    display flex
