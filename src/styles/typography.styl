body
  color $textColor
  font-size $baseFont
  line-height 1.4
  font-weight 400
  word-break break-word
  font-family -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Nue, Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -webkit-text-stroke 1px transparent
  -webkit-text-size-adjust 100%

h1, .h1,
h2, .h2,
h3, .h3,
h4, .h4,
h5, .h5
  font-weight 500
  margin-top 30px
  margin-bottom .2em


h1,
.h1
  font-size $font-large
  margin-top 0
  margin-bottom 15px

h2,
.h2
  font-size 26px

h3,
.h3
  font-size 24px

h4,
.h4
  font-size 22px

h5,
.h5
  font-size 20px


p
  margin-top 20px
  margin-bottom 20px

ul, ol
  padding-left 40px
  margin-top 20px
  margin-bottom 20px

b, strong
  font-weight 700

i, em
  font-style italic

sup
  font-size 85%
  line-height 0
  vertical-align baseline
  position relative
  top -0.45em

sub
  font-size 85%
  line-height 0
  vertical-align baseline
  position relative
  top 0.2em

u,
.underlined
  text-decoration underline

s,
strike,
.strike
  text-decoration line-through

blockquote
  position relative
  border-left 4px solid $red
  padding-left 15px
  margin-top 20px
  margin-bottom 20px
  & + &
    margin-top -20px

code,
pre
  font-size 85%
  border-radius 3px
  font-family SFMono-Regular, Consolas, Liberation Mono, Menlo, Courier, monospace
  background-color $gray-light

code
  padding 0.2em 0.4em

pre
  word-break normal
  padding 16px
  overflow auto
  line-height 1.45
  margin-top 20px
  margin-bottom 20px

a
  text-decoration underline
  &:hover
    color $red

.tag
  position relative
  &:before
    content ""
    color $gray-dark
    font-size .6em
    font-weight 700
    position absolute
    right calc(100% + 5px)
    top 10px
  &_h1
    &:before
      content "H1"