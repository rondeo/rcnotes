.root
  color $subText
  border-left 4px solid transparent
  padding-left 10px
  &Active
    border-left-color $pink
  &Container
    position relative
  &Link
    text-decoration none
    padding 15px 10px 10px
    background-color $bg
    border-bottom 1px solid $gray
    position relative
    z-index 2
    display block
  &Title
    color $text
    font-size 18px
    font-weight 700
    margin-bottom 5px
    display block
  &Date
    font-size $smallSize
  &Underside
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    z-index 1