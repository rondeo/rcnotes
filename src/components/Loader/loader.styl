.loader
  width 60px
  height (@width / 2)
  &Absolute
    position absolute
    top 50%
    left 50%
    transform translate(-50% -50%)
  &Item
    width 100%
    height 100%
    overflow hidden
    transform-origin 50% 100%
    animation loading 1s infinite linear
    &:before
      content ""
      width 100%
      height 200%
      border 5px solid $red
      border-radius 50%
      display block

@keyframes loading
  to
    transform rotate(360deg)