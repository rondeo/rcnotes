.wrapper
  width 35px
  height 100%
  color $gray-dark
  position fixed
  top 0
  right 0
  z-index 10
  display flex
  flex-direction column
  &:hover
    color $subText

.bottom
  margin-top auto

.button
  width 100%
  font-size 18px
  text-align center
  background-color transparent
  display block
  flex 0 0 auto
  cursor pointer
  transition color .3s ease
  &:hover,
  &Active
    color $red
  & + &
    margin-top 20px